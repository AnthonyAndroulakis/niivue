{
  "name": "@niivue/niivue",
  "version": "0.10.1",
  "description": "minimal webgl2 nifti image viewer",
  "main": "./src/niivue.js",
  "scripts": {
    "dev": "vite",
    "build": "npx prettier --write src/ && npx vite build --emptyOutDir && npm run copy-test && npm run copy-demo && npm run copy-doc",
    "build-win": "npx prettier --write src/ && npx vite build --emptyOutDir && npm run copy-test-win && npm run copy-demo-win && npm run copy-doc-win",
    "demo": "npm run build && npx http-server demos/",
    "demo-win": "npm run build-win && npx http-server demos/",
    "copy-test": "cp ./dist/niivue.umd.js ./tests/niivue.umd.js",
    "copy-test-win": "copy .\\dist\\niivue.umd.js .\\tests\\niivue.umd.js",
    "copy-demo": "cp ./dist/niivue.umd.js ./demos/niivue.umd.js",
    "copy-demo-win": "copy .\\dist\\niivue.umd.js .\\demos\\niivue.umd.js",
    "copy-doc": "cp -r ./demos/* ./docs/",
    "copy-doc-win": "robocopy .\\demos .\\docs /E",
    "test": "npm run build && jest -i",
    "test-win": "npm run build-win && jest -i",
    "pub": "npm publish --access public"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niivue/niivue.git"
  },
  "keywords": [
    "niivue",
    "webgl2",
    "nifti",
    "image",
    "viewer"
  ],
  "author": "niivue authors",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/niivue/niivue/issues"
  },
  "homepage": "https://github.com/niivue/niivue#readme",
  "dependencies": {
    "gl-matrix": "^3.3.0",
    "nifti-reader-js": "^0.5.4",
    "rxjs": "^7.1.0"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "express": "^4.17.1",
    "http-server": "^0.12.3",
    "jest": "^27.0.6",
    "jest-image-snapshot": "^4.5.1",
    "jest-puppeteer": "^5.0.4",
    "prettier": "^2.3.2",
    "puppeteer": "^9.1.1",
    "vite": "^2.6.14"
  }
}
